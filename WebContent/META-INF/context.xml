<?xml version="1.0" encoding="UTF-8" ?>
<Context
		docBase="testMember"
		path="/testMember"
		reloadable="true">

	<Resource
			name="jdbc/mysql"
			auth="Container"
			type="javax.sql.DataSource"
			driverClassName="com.mysql.jdbc.Driver"
			url="jdbc:mysql://localhost:3306/testdb?autoReconnect=true"
			connectionProperties="useUnicode=yes;characterEncoding=utf8;"
			username="root"
			password="12345"
			maxWait="5000"
			maxActive="20"
			testOnBorrow="true"
			factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
			closeMethod="close"></Resource>

</Context>